<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_register_centerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_register_toplayout"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/icon_name" />
        </RelativeLayout>


        <EditText
            android:id="@+id/edt_register_mobile"
            style="@style/black_common_15"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/rl_register_toplayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:textColorHint="@color/bb" />

        <ImageView
            android:id="@+id/img_register_cancle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@id/edt_register_mobile"
            android:layout_alignTop="@id/edt_register_mobile"
            android:layout_marginTop="10dp"
            android:padding="11.5dp"
            android:src="@mipmap/login_cancle"
            android:visibility="gone" />

        <View
            android:id="@+id/v_register_centerline"
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_below="@id/rl_register_toplayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/txt_register_remind"
            style="@style/black_common_15"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/v_register_centerline"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/bb" />

        <LinearLayout
            android:id="@+id/rl_register_codelayout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignTop="@id/v_register_centerline"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-50dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/edt_register_code1"
                style="@style/black_15"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="13dp"
                android:background="@drawable/line_black"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1" />

            <EditText
                android:id="@+id/edt_register_code2"
                style="@style/black_15"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="13dp"
                android:background="@drawable/line_black"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1" />

            <EditText
                android:id="@+id/edt_register_code3"
                style="@style/black_15"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="13dp"
                android:background="@drawable/line_black"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1" />

            <EditText
                android:id="@+id/edt_register_code4"
                style="@style/black_15"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/line_black"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>