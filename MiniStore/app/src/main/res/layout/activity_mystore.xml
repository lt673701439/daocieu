<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/include_title"
        layout="@layout/include_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_mystore_visitingcard"
                style="@style/black_13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的名片" />

            <TextView
                android:id="@+id/txt_mystore_stuff"
                style="@style/gray_13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的资料" />

            <TextView
                android:id="@+id/txt_mystore_verify"
                style="@style/gray_13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="认证审核" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_mystore_index"
            android:layout_width="223dp"
            android:layout_height="6dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="#FEBB40" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_mystore"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>